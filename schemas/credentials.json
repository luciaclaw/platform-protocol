{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://luciaclaw.com/schemas/credentials.json",
  "title": "Credential Messages",
  "description": "Credential management schemas for secure vault operations",
  "definitions": {
    "credentialType": {
      "type": "string",
      "enum": ["oauth", "api_key", "token"]
    },
    "credentialInfo": {
      "type": "object",
      "required": ["service", "label", "credentialType", "connected", "createdAt"],
      "properties": {
        "service": { "type": "string", "minLength": 1 },
        "account": { "type": "string", "minLength": 1 },
        "label": { "type": "string", "minLength": 1 },
        "credentialType": { "$ref": "#/definitions/credentialType" },
        "connected": { "type": "boolean" },
        "createdAt": { "type": "number" },
        "lastUsedAt": { "type": "number" },
        "scopes": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": false
    }
  },
  "oneOf": [
    {
      "title": "CredentialSet",
      "description": "Store or update a credential",
      "type": "object",
      "required": ["id", "type", "timestamp", "payload"],
      "properties": {
        "id": { "type": "string", "format": "uuid" },
        "type": { "const": "credentials.set" },
        "timestamp": { "type": "number" },
        "payload": {
          "type": "object",
          "required": ["service", "label", "credentialType", "value"],
          "properties": {
            "service": { "type": "string", "minLength": 1 },
            "account": { "type": "string", "minLength": 1 },
            "label": { "type": "string", "minLength": 1 },
            "credentialType": { "$ref": "#/definitions/credentialType" },
            "value": { "type": "string", "minLength": 1 },
            "scopes": { "type": "array", "items": { "type": "string" } }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    {
      "title": "CredentialDelete",
      "description": "Delete a credential",
      "type": "object",
      "required": ["id", "type", "timestamp", "payload"],
      "properties": {
        "id": { "type": "string", "format": "uuid" },
        "type": { "const": "credentials.delete" },
        "timestamp": { "type": "number" },
        "payload": {
          "type": "object",
          "required": ["service"],
          "properties": {
            "service": { "type": "string", "minLength": 1 },
            "account": { "type": "string", "minLength": 1 }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    {
      "title": "CredentialList",
      "description": "Request credential metadata",
      "type": "object",
      "required": ["id", "type", "timestamp", "payload"],
      "properties": {
        "id": { "type": "string", "format": "uuid" },
        "type": { "const": "credentials.list" },
        "timestamp": { "type": "number" },
        "payload": {
          "type": "object",
          "properties": {
            "service": { "type": "string" },
            "account": { "type": "string" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    {
      "title": "CredentialResponse",
      "description": "Credential metadata response",
      "type": "object",
      "required": ["id", "type", "timestamp", "payload"],
      "properties": {
        "id": { "type": "string", "format": "uuid" },
        "type": { "const": "credentials.response" },
        "timestamp": { "type": "number" },
        "payload": {
          "type": "object",
          "required": ["credentials"],
          "properties": {
            "credentials": {
              "type": "array",
              "items": { "$ref": "#/definitions/credentialInfo" }
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  ]
}
