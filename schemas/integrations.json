{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://luciaclaw.com/schemas/integrations.json",
  "title": "Integration Messages",
  "description": "Integration registry schemas for supported services",
  "definitions": {
    "integrationInfo": {
      "type": "object",
      "required": ["service", "name", "description", "authType", "capabilities", "connected"],
      "properties": {
        "service": { "type": "string", "minLength": 1 },
        "name": { "type": "string", "minLength": 1 },
        "description": { "type": "string" },
        "authType": { "type": "string", "enum": ["oauth", "api_key", "token"] },
        "requiredScopes": { "type": "array", "items": { "type": "string" } },
        "capabilities": { "type": "array", "items": { "type": "string" } },
        "connected": { "type": "boolean" },
        "icon": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "oneOf": [
    {
      "title": "IntegrationsList",
      "description": "Request available integrations",
      "type": "object",
      "required": ["id", "type", "timestamp", "payload"],
      "properties": {
        "id": { "type": "string", "format": "uuid" },
        "type": { "const": "integrations.list" },
        "timestamp": { "type": "number" },
        "payload": {
          "type": "object",
          "properties": {
            "filter": { "type": "string", "enum": ["all", "connected", "available"] }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    {
      "title": "IntegrationsResponse",
      "description": "List of integrations and their status",
      "type": "object",
      "required": ["id", "type", "timestamp", "payload"],
      "properties": {
        "id": { "type": "string", "format": "uuid" },
        "type": { "const": "integrations.response" },
        "timestamp": { "type": "number" },
        "payload": {
          "type": "object",
          "required": ["integrations"],
          "properties": {
            "integrations": {
              "type": "array",
              "items": { "$ref": "#/definitions/integrationInfo" }
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  ]
}
